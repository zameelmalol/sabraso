<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @{var color = "";}
    @if (User.Identity.Name == "admin")
    {
        color = "#222222";
    }
    else
    {
        color = "#18bc9c";
    }
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: @color">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Product", "Index", "Product")</li>
                    @if (User.Identity.Name == "admin")
                    {
                        <li>@Html.ActionLink("Rating", "Index", "Rating")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("My Cart", "MyCart", "Transaction")</li>
                    }
                    <li>@Html.ActionLink("FAQ", "Index", "FAQ")</li>
                    @if (User.Identity.Name == "admin")
                    {
                        <li>@Html.ActionLink("CartAdmin", "Index", "CartAdmin")</li>
                        <li>@Html.ActionLink("Customer", "Index", "Customer")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Admin Links", "AdminLinks", "Admin")</li>
                                <li>@Html.ActionLink("Analyze Product Usage", "ProductUsage", "Admin")</li>
                                <li>@Html.ActionLink("List Empty Carts", "ListEmptyCarts", "Admin")</li>
                                <li>@Html.ActionLink("List Carts Status", "ListAllCarts", "Admin")</li>
                                <li>@Html.ActionLink("View All Carts", "Index", "CartAdmin")</li>
                                <li>@Html.ActionLink("View All Customer", "Index", "Customer")</li>
                                <li>@Html.ActionLink("Product Categories", "Index", "Categories")</li>
                            </ul>
                        </li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        <img src="~/Content/Images/banner.png" width="100%" height="15" />
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; CP2870 -2 | Mohammed Zameel | 60080371 | Final Project</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
