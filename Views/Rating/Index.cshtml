@model IEnumerable<Shopping.Models.Rating>

@{
    ViewBag.Title = "Index";
}

<h2>Ratings</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            User
        </th>
        <th>
            Product
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { p_id = item.ProductId, c_id = item.CustomerId }) |
                @Html.ActionLink("Delete", "Delete", new { p_id = item.ProductId, c_id = item.CustomerId })
            </td>
        </tr>
    }

</table>
