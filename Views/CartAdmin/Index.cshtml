@model IEnumerable<Shopping.Models.Cart>

@{
    ViewBag.Title = "Index";
}

<h2>CartAdmin</h2>
<h4><font color="red"> @TempData["ErrorMessage"]</font></h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @if (item.Status == "paid")
                {
                    <b>|</b> @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                } @if (item.Status == "unpaid" && item.CartItems.Count == 0)
                {
                    <b>|</b> @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }
</table>
